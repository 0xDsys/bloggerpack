<bp:template>
  {% macro hello(name) %}
    <div class='plugin-template-bar'>Hello {{ name }}</div>
  {% endmacro %}
</bp:template>

<bp:sass>
.plugin-template-bar {
  display: block;
}
</bp:sass>

<bp:skin>
/*
<Variable name="plugin.template.bar.color"
    description="Plugin Template Bar Color"
    type="color"
    default="#000000"
    value="#000000"/>
*/

.plugin-template-bar {
  color: $(plugin.template.bar.color);
}
</bp:skin>

