<bp:template>
  {% macro hello(name) %}
    <div class='org-plugin-template-bar'>Hello {{ name }}</div>
  {% endmacro %}
</bp:template>

<bp:sass>
.org-plugin-template-bar {
  display: block;
}
</bp:sass>

<bp:skin>
/*
<Variable name="org.plugin.template.bar.color"
    description="Org Plugin Template Bar Color"
    type="color"
    default="#000000"
    value="#000000"/>
*/

.org-plugin-template-bar {
  color: $(org.plugin.template.bar.color);
}
</bp:skin>

