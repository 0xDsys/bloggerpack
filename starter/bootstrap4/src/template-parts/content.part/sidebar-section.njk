::template::
<b:section class='b-section-sidebar' id='b-section-sidebar' name='Sidebar section'>
  {% template "template-parts/content.part/sidebar-section.part/html-example.njk" %}
</b:section>
::endtemplate::

::sass::
//
// Widget
//

// stylelint-disable no-duplicate-selectors
.b-section-sidebar > .widget {
  @extend .card;
  margin-bottom: 1rem;

  &:last-child {
    margin-bottom: 0;
  }

  > .title {
    @extend .card-header;
    @include font-size($h5-font-size);
  }

  > .widget-content {
    @extend .card-body;

    > :first-child {
      margin-top: 0;
    }
    > :last-child {
      margin-bottom: 0;
    }
  }
}
// stylelint-enable
::endsass::
