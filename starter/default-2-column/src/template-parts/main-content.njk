<b:section class='b-section-main' id='b-section-main' maxwidgets='1' name='Main section' showaddelement='no'>
  {#==================================================
  Blog widget
  - Breadcrumb
  - Status message
  - Posts
  - Comments
  - Pager
  ==================================================#}
  <b:widget id='Blog1' locked='true' title='Blog Posts' type='Blog' visible='true'>
    <b:includable id='main' var='this'>
      <b:comment>
      ##################################################
      Breadcrumb
      ##################################################</b:comment>

      <b:if cond='!data:view.isHomepage'>
        <ol class='breadcrumb' id='breadcrumb'>

          <li class='breadcrumb-item'>
            <a class='breadcrumb-link' expr:href='data:blog.homepageUrl'><data:messages.home/></a>
          </li>

          <b:comment>### Post page ###</b:comment>

          <b:if cond='data:view.isPost'>
            <b:loop values='data:posts' var='post'>
              <li class='breadcrumb-item active'>Post: <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></li>
            </b:loop>
          </b:if>

          <b:comment>### Static page ###</b:comment>

          <b:if cond='data:view.isPage'>
            <b:loop values='data:posts' var='post'>
              <li class='breadcrumb-item active'>Page: <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/></li>
            </b:loop>
          </b:if>

          <b:comment>### Search (label) page ###</b:comment>

          <b:if cond='data:view.isLabelSearch'>
            <li class='breadcrumb-item'>
              <a class='breadcrumb-link' expr:href='path(data:blog.homepageUrl, "/search")'>Search</a>
            </li>
            <li class='breadcrumb-item active'>Label: <data:view.search.label/></li>
          </b:if>

          <b:comment>### Search (query) page ###</b:comment>

          <b:if cond='data:view.search.query'>
            <li class='breadcrumb-item'>
              <a class='breadcrumb-link' expr:href='path(data:blog.homepageUrl, "/search")'>Search</a>
            </li>
            <li class='breadcrumb-item active'>Query: <data:view.search.query/></li>
          </b:if>

          <b:comment>### Search (default) page ###</b:comment>

          <b:if cond='data:view.isSearch and !data:view.isLabelSearch and !data:view.search.query'>
            <li class='breadcrumb-item active'>Search</li>
          </b:if>

          <b:comment>### Archive page ###</b:comment>

          <b:if cond='data:view.isArchive'>
            <b:if cond='data:view.archive.month'>
              <li class='breadcrumb-item'>
                <a class='breadcrumb-link' expr:href='data:blog.homepageUrl + data:view.archive.year'><data:view.archive.year/></a>
              </li>
              <li class='breadcrumb-item active'><data:view.archive.month/></li>
            <b:else/>
              <li class='breadcrumb-item active'><data:view.archive.year/></li>
            </b:if>
          </b:if>

          <b:comment>### Error page ###</b:comment>

          <b:if cond='data:view.isError'>
            <li class='breadcrumb-item active'>404</li>
          </b:if>

        </ol>
      </b:if>

      <b:comment>
      ##################################################
      Not found message
      ##################################################</b:comment>

      <b:comment>### Homepage ###</b:comment>

      <b:if cond='data:view.isHomepage'>
        <b:if cond='data:posts.empty'>
          <div class='not-found-message' id='not-found-message' role='alert'>
            <data:messages.theresNothingHere/>
          </div>
        </b:if>
      </b:if>

      <b:comment>### Search (label|query|default) page | Archive page ###</b:comment>

      <b:if cond='data:view.isSearch or data:view.isArchive'>
        <b:if cond='data:posts.empty'>
          <div class='not-found-message' id='not-found-message' role='alert'>
            <data:messages.noResultsFound/>
          </div>
        </b:if>
      </b:if>

      <b:comment>### Error page ###</b:comment>

      <b:if cond='data:view.isError'>
        <div class='not-found-message' id='not-found-message' role='alert'>
          <data:navMessage/>
        </div>
      </b:if>

      <b:comment>
      ##################################################
      Posts
      ##################################################</b:comment>

      <b:comment>### Homepage | Search (label|query|default) page | Archive page ###</b:comment>

      <b:if cond='data:posts.notEmpty'>
        <b:if cond='data:view.isMultipleItems'>
          <b:loop values='data:posts' var='post'>
            <article class='post post-index' expr:id='"post-" + data:post.id'>

              <b:comment>=== Labels ===</b:comment>
              <b:if cond='data:post.labels'>
                <ul class='post-labels'>
                  <b:loop index='i' values='data:post.labels' var='label'>
                    <li>
                      <a expr:href='params(data:label.url, { max-results: "12" })'><data:label.name/></a>
                    </li>
                  </b:loop>
                </ul>
              </b:if>

              <b:comment>=== Title ===</b:comment>
              <h2 class='post-title'>
                <a expr:href='data:post.link ?: data:post.url'>
                  <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
                </a>
              </h2>

              <b:comment>=== Meta ===</b:comment>
              <div class='post-meta'>
                <b:comment>=== Col 1 ===</b:comment>
                <div class='post-meta-col-1'>
                  <b:comment>=== Author photo ===</b:comment>
                  <b:with value='42' var='size'>
                  <b:with value='"1:1"' var='ratio'>
                    <b:if cond='data:post.author and data:post.author.authorPhoto'>
                      <img>
                        <!-- class --><b:class name='post-meta-avatar'/>
                        <!-- src --><b:attr expr:value='data:post.author.authorPhoto.image.isResizable ? resizeImage(data:post.author.authorPhoto.image, data:size, data:ratio) : data:post.author.authorPhoto.image' name='src'/>
