/**
 * Footer description base class
 */

.footer-description {
  color: $(footer.desc.color);
  font-size: $(footer.desc.font.size);
  font-family: $(footer.desc.font.family);
}

/**
 * Footer description paragraphs
 */

.footer-description p {
  margin-top: 0;
  margin-bottom: 10px;
}
.footer-description p:last-child {
  margin-bottom: 0;
}

/**
